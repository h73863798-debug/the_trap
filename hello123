#include <stdio.h>
#include <string.h>
int main()
{
    int i,l,k=0,a;
    char str[100],s[100];
    printf("Enter a sentence:\n");
    scanf("%[^\n]s",str);
    l=strlen(str);
    for(i=l-1;i>=0;i--)
    {
        s[k]=str[i];
        k=k+1;
    }
    a=strcmp(s,str);
    if(a==0)
    {
        printf("It is a palindrome string");
    }
    else
    {
        printf("It is not a palindrome string");
    }
    return(0);
}
