#include <stdio.h>
int fact(int n)
{
    if((n==0)||(n==1))
    {
        return(1);
    }
    else
    {
        return n*fact(n-1);
    }
}
int main()
{
    int num,result;
    printf("Enter a number:\n");
    scanf("%d",&num);
    if(num<0)
    {
        printf("Factorial is not defined for negative numbers");
    }
    else
    {
    result=fact(num);
    printf("The factorial of the number is:%d\n",result);
    }
    return(0);
}
