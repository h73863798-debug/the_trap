#include <stdio.h>
int main()
{
    int i,*p,n,max=0,l=0;
    printf("Enter the size of the array:\n");
    scanf("%d",&n);
    int a[n];
    printf("Enter %d numbers:\n",n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    p=a;
    while(l<n)
    {
        if(*p>max)
    {
        max=*p;
        p++;
    }
    else
    {
        p++;
    }
    l=l+1;
    }
    printf("The largest number in teh array is:%d\n",max);
    return(0);
}
