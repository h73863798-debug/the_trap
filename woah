import java.util.*;
public class hello
{
    public static void main()
    {
        int i,n;
        double s=0,a=2;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the value of n");
        n=sc.nextInt();
        for(i=1;i<=n;i++)
        {
            s=s+(1/a);
            a=Math.pow(2,i+1);
        }
        System.out.println("The sum is:"+s);
    }
}
